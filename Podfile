# Uncomment this line to define a global platform for your project
platform :ios, '9.0'

install! 'cocoapods', :generate_multiple_pod_projects => true

target 'SwiftMVVMDemo' do
    use_frameworks!
    inhibit_all_warnings!
    
    # 网络库
    pod 'Alamofire'
    # 代码自动布局工具
    pod 'SnapKit'
    # 数据库工具
    pod 'RealmSwift'
    # JSON解析工具
    pod 'SwiftyJSON'
    # 网络图片加载、缓存
    pod 'Kingfisher'
    # 日志系统
    pod 'SwiftyBeaver'
    # 加载控件
    pod 'MBProgressHUD'
    # 图文混排
    pod 'YYText'
end
